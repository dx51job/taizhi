/* pages/myInfo/myInfo.wxss */

.title {
  font-size: 20px;
  font-weight: bold;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 10px;
  padding-bottom: 30px;
  box-shadow: 0 0 30px #ccc;
  background-color: white;
}

.avatar {
  width: 60px;
  height: 60px;
  background: grey;
  border-radius: 30px;
  margin: 15px auto;
}

.username {
  font-size: 16px;
  font-weight: bold;
}

.contentview {
  box-sizing: border-box;
  margin-top: 10px;
  padding: 3%;
}

.content {
  /* background-color: red; */
}

.settingtitle {
  font-size: 14px;
  color: #999;
  margin-left: 3%;
}

.settingview {
  /* height: 500px; */
  margin: 3%;
  background-color: white;
  border-radius: 15px;
  padding-top: 3%;
  padding-bottom: 3%;
}

.settingitem {
  display: flex;
  align-items: center;
  /* background-color: yellow; */
height: 60px;
padding-left: 6%;
padding-right: 3%;
}

.settingicon {
  width: 30px;
  height: 30px;
}

.settingname {
  color: #666;
  font-size: 16px;
  font-weight: bold;
  margin-left: 6%;
}

.arrow {
  width: 20px;
  height: 20px;
margin-left: auto;
}

.divider {
  background-color: #f4f4f4;
  width: 88%;
  height: 1px;
  margin-left: 6%;
}
